@model IEnumerable<Homework9.Models.HotDogUser>

@{
    ViewBag.Title = "Index";
}

<h2>Hot Dog Lover Profile</h2>

<p>
    @Html.ActionLink("Add User", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FavoriteDog)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PastDog)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FavoriteDog)
        </td>
        <td>
            @Html.DropDownList("PastDogs")
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
